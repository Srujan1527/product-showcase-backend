{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

    // Source maps & build output
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Misc
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
